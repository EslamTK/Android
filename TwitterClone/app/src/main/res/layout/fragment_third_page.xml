<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.master.twitterclone.ThirdPage">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/UserProfilePhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/UserProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/UserProfilePhoto"
        android:layout_toEndOf="@+id/UserProfilePhoto"
        android:layout_toRightOf="@+id/UserProfilePhoto"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/UserProfileAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserProfileName"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/UserProfilePhoto"
        android:layout_toRightOf="@+id/UserProfilePhoto"
        android:text="UserAge"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/UserProfilePhoto"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/line1"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/profilePostsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ProgressBar
            android:id="@+id/thirdProgressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />
    </RelativeLayout>

</RelativeLayout>
