<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.master.twitterclone.FirstPage">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/TweetContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Write Your Tweet"
        android:lineSpacingExtra="5dp"
        android:minHeight="50dp" />

    <Button
        android:id="@+id/TweetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TweetContent"
        android:layout_centerHorizontal="true"
        android:text="Tweet" />

    <ProgressBar
        android:id="@+id/firstProgressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/TweetBtn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:indeterminate="true" />

    <ListView
        android:id="@+id/TweetsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TweetBtn"
        android:layout_centerHorizontal="true"
        android:choiceMode="none"
        tools:listitem="@android:layout/simple_list_item_2" />
</RelativeLayout>
